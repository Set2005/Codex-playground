{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["summary", "reviews"],
  "additionalProperties": false,
  "properties": {
    "summary": {
      "type": "string",
      "description": "Overall review summary in 2-3 sentences"
    },
    "reviews": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "line_start", "line_end", "severity", "category", "message"],
        "additionalProperties": false,
        "properties": {
          "file": {
            "type": "string",
            "description": "File path relative to repo root"
          },
          "line_start": {
            "type": "integer",
            "description": "Starting line number"
          },
          "line_end": {
            "type": "integer",
            "description": "Ending line number"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"],
            "description": "Issue severity"
          },
          "category": {
            "type": "string",
            "enum": ["bug", "security", "performance", "logic", "style"],
            "description": "Issue category"
          },
          "message": {
            "type": "string",
            "description": "Detailed explanation of the issue"
          },
          "suggestion": {
            "type": "string",
            "description": "Optional code fix suggestion with markdown code block (e.g. ```js\\n// fix\\n```)"
          }
        }
      }
    }
  }
}
